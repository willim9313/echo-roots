# Echo-Roots Environment Configuration
# Copy this file to .env and update values as needed

# Database settings
DUCKDB_PATH=./data/echo_roots.duckdb
DUCKDB_MEMORY_LIMIT=1GB

# Optional storage backends
# Neo4j for graph-based taxonomy and semantic relationships
NEO4J_ENABLED=false
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# LLM Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Embedding model
EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-dot-v1
EMBEDDING_DIMENSION=768

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/echo_roots.log

# Development settings
DEBUG=false
ENVIRONMENT=development

# Domain packs directory
DOMAIN_PACKS_PATH=./domains