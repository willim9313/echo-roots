# Echo-Roots Environment Configuration
# Copy this file to .env and update values as needed

# Database settings
DUCKDB_PATH=./data/echo_roots.duckdb
DUCKDB_MEMORY_LIMIT=1GB

# Optional storage backends
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_PROJECT_ID=your_google_project_id

# Azure OpenAI (如果使用)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME=your-deployment-name
AZURE_API_KEY=your-azure-api-key

# 自訂 API 設定
CUSTOM_API_URL=https://your-api.com
CUSTOM_API_KEY=your-custom-api-key
CUSTOM_MODEL_NAME=your-model-name

# Embedding model
EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-dot-v1
EMBEDDING_DIMENSION=768

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/echo_roots.log

# Development settings
DEBUG=false
ENVIRONMENT=development

# Domain packs directory
DOMAIN_PACKS_PATH=./domains
